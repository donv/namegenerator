<?xml   version="1.0"   encoding="ISO-8859-1"?><!DOCTYPE struts-config PUBLIC          "-//Apache Software Foundation//DTD Struts Configuration 1.0//EN"          "http://jakarta.apache.org/struts/dtds/struts-config_1_0.dtd"><struts-config>  <!-- ========== Form Bean Definitions =================================== -->  <form-beans>    <form-bean      name="generateForm"      type="net.enusquest.namegenerator.actions.GenerateForm"/>    <form-bean      name="useForm"      type="net.enusquest.namegenerator.actions.UseForm"/>  </form-beans>  <!-- ========== Global Forward Definitions ============================== -->  <global-forwards>    <forward      name="generate"      path="/jsp/generate.jsp"/>  </global-forwards>  <!-- ========== Action Mapping Definitions ============================== -->  <action-mappings>    <action      path="/generate"      type="net.enusquest.namegenerator.actions.GenerateAction"      name="generateForm"      scope="session">      <forward        name="input"        path="/jsp/generate.jsp"></forward>      <forward        name="display"        path="/jsp/generate.jsp"></forward>    </action>    <action      path="/use"      type="net.enusquest.namegenerator.actions.UseAction"      name="useForm"      scope="session">      <forward        name="input"        path="/jsp/generate.jsp"></forward>      <forward        name="display"        path="/jsp/generate.jsp"></forward>    </action>  </action-mappings></struts-config>